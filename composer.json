{
    "name": "ecommerce/saas",
    "description": "Sistema SaaS de E-commerce",
    "type": "project",
    "require": {
        "php": "^8.2",
        "stripe/stripe-php": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "predis/predis": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "doctrine/dbal": "^3.0",
        "twig/twig": "^3.0",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^6.0",
        "filp/whoops": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "app/core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable"
} 